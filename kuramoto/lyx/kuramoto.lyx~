	filename images/rt2.png
	lyxscale 10
	scale 70

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Caption Standard

\begin_layout Plain Layout
\begin_inset Formula $r_{t=100}$
\end_inset

 vs 
\begin_inset Formula $K$
\end_inset

 plot for normal distributed 
\begin_inset Formula $\omega_{i}$
\end_inset

.
